<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              style="@style/Widget.ExpandableSearchView.SearchBar"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <ImageButton
        android:id="@+id/image_button_back"
        style="?attr/search_bar_image_button_style"
        android:layout_width="@dimen/search_bar_size"
        android:layout_height="@dimen/search_bar_size"
        android:contentDescription="@string/desc_search_bar_back_arrow_icon"
        android:src="?attr/search_bar_back_icon"/>

    <EditText
        android:id="@+id/edit_text_query"
        style="?attr/search_bar_image_button_style"
        android:layout_width="0dp"
        android:layout_height="@dimen/search_bar_size"
        android:layout_weight="1"
        android:inputType="none"/>

    <ImageButton
        android:id="@+id/image_button_clear"
        style="?attr/search_bar_image_button_style"
        android:layout_width="@dimen/search_bar_size"
        android:layout_height="@dimen/search_bar_size"
        android:contentDescription="@string/desc_search_bar_clear_icon"
        android:src="?attr/search_bar_clear_icon"
        android:visibility="gone"
        tools:visibility="visible"/>

    <ImageButton
        android:id="@+id/image_button_voice_input"
        style="?attr/search_bar_image_button_style"
        android:layout_width="@dimen/search_bar_size"
        android:layout_height="@dimen/search_bar_size"
        android:contentDescription="@string/desc_search_bar_voice_input_icon"
        android:src="?attr/search_bar_voice_input_icon"
        android:visibility="gone"
        tools:visibility="visible"/>
</LinearLayout>